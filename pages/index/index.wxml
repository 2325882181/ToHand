<!--pages/index/index.wxml-->
<view class="container">
<!-- 搜索 -->
<input class="search" type="text" confirm-type="search" placeholder="请搜索喜欢的商品"></input>
 <!-- 轮播图 -->
  <view class="banner">
    <swiper autoplay="true" circular="true"b indicator-dots="true"> 
      <swiper-item>
      <image src="../../images/banner1.jpg" mode="widthFix"></image>
      </swiper-item>
      <swiper-item>
      <image src="../../images/banner2.jpg" mode="widthFix"></image>
      </swiper-item>
      <swiper-item>
      <image src="../../images/banner3.jpg" mode="widthFix"></image>
      </swiper-item>
      <swiper-item>
      <image src="../../images/banner4.jpg" mode="widthFix"></image>
      </swiper-item>
    </swiper>
  </view>
  <!-- 导航菜单 -->
   <view class="nav">
      <view class="menu"  wx:for="{{navList}}" wx:key="{{index}}">
        <image src="{{item.src}}"></image>
         <text>{{item.name}}</text>
      </view>
   </view>
</view>
  <!--产品列表  -->


<!-- 产品列表 -->
<text class="hot"> 热卖产品 </text>
<view class="wrap"> 
<navigator url="/pages/detail/detail?id={{item.id}}" wx:for="{{productList}}" wx:key="{{index}}" class="product">
    <image   src="{{item.src}}" mode="widthFix"></image>
    <view class="info">
      <text class="name">{{item.name}}</text>
      <text class="price">￥{{item.price}}元</text>
    </view>
    </navigator>
</view>


