/* 容器 */
.container{
  width: 100%;
  display: flex;
  flex-direction:row; 
}

.top{
  margin: 20rpx;
  text-align: center;
}

.menu{
  width: 20%;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #E8E9E9;
  justify-content: start;
  align-items: center;
}

.menu .classtype{
  margin: 16rpx 0;
  color:rgb(100, 100, 100);
  font-weight: 500;
}

.menu .classtype.on{
  color: #000;
}

.list{
  width: 80%;
  display: flex;
  flex-direction: column;
}

.list .productList{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;  
  margin: 6rpx;
}

.productList .info{
  width:100%;
  display: flex;
  flex-direction: column;
}

image{
  width:300rpx;
  border-radius: 15rpx;
}

.cart-count-box{
    font-size: 36rpx;
}

.cart-count-down,.cart-count-add{
    width: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.bottom .btn{
  width: 100vh;
  background-color: #008842;
  color: #fff;
}







