.product{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #b0b3b6;
}

.info{
   width: 80%;
   display: flex;
   flex-direction: column;
}

.info .price{
