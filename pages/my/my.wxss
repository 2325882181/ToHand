.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

navigator{
  width: 100%;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
  width: 750rpx;
  margin-top: 30rpx;
}

.userinfo .login-name{
  margin-top: 24rpx;
  margin-bottom: 30rpx;
}

.userinfo .mini-btn{
  text-align: center;
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
}
.userinfo-nickname {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}

.my-item{
    width: 100%;
    border-bottom: 1px solid #eee;
    height: 80rpx;
    padding-left: 50rpx;
    line-height: 80rpx;
    font-size:14px;
}

.to-authorize{
  border: none;
  padding: 0rpx;
  margin: 0rpx;
  background: none;
  height: auto;
  line-height: auto;
}
/* 注销登录 */
.logout{
  margin: 20rpx;
  width: 100%;
}

.logout .logout-btn{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}