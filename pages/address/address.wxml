<view class="main">
  <view class="form-box">
    <form bindsubmit="formSubmit">
      <input value="{{address.name}}" placeholder="姓名" bindinput="bindName"/>
      <input type="number" value="{{address.phone}}" placeholder="电话号码" 
      bindinput="bindPhone" />
      <input value="{{address.detail}}" placeholder="详细地址" bindinput="bindDetail"/>
      <button bindtap="chooseLocation" type="primary">选择地址</button>
      <button type="primary" form-type="submit">保存</button>
    </form>
  </view>
</view>